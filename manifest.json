{
  "name": "Helsinki Tel Linker",
  "version": "0.5.3",
  "manifest_version": 2,
  "description": "Locates telephone numbers on a page and converts them into clickable links.",
  "permissions": [
    "storage",
    "contextMenus",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*", "file:///*/*" ],
      "js": [ "jquery-3.5.1.min.js", "content_script.js" ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16" : "icon16.png",
    "128": "icon128.png"
  },
  "options_ui":
    {
      "page": "options.html",
      "chrome_style": true
    }
}
